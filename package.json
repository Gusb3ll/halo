{
  "name": "halo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@7.26.3",
  "description": "",
  "author": "",
  "license": "MIT",
  "repository": "https://github.com/gusb3ll/halo",
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "dotenv -- turbo run dev --parallel",
    "dev:client": "dotenv -- turbo run dev --filter=\"./apps/client\"",
    "dev:server": "dotenv -- turbo run dev --filter=\"./apps/*\" --filter=\"!./apps/client\"",
    "build": "dotenv -- turbo run build",
    "build:package": "dotenv -- turbo run build --filter=\"./packages/*\"",
    "build:client": "dotenv -- turbo run build --filter=\"./apps/client\"",
    "build:server": "dotenv -- turbo run build --filter=\"./apps/*\" --filter=\"!./apps/client\"",
    "start": "dotenv -- turbo run start",
    "start:client": "dotenv -- turbo run start --filter=\"./apps/client\"",
    "start:server": "dotenv -- turbo run start --filter=\"./apps/*\" --filter=\"!./apps/client\"",
    "lint": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "0.35.2",
    "@swc/cli": "0.1.61",
    "@swc/core": "1.3.32",
    "concurrently": "7.6.0",
    "dotenv": "16.0.3",
    "dotenv-cli": "7.0.0",
    "eslint": "8.33.0",
    "nodemon": "2.0.20",
    "rimraf": "3.0.2",
    "turbo": "1.7.3",
    "typescript": "4.9.5"
  }
}
